@using FrontEnd.Models;
@using System.Text.Json;
@model ProductCreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


 <form asp-action="Create"asp-controller="Product"method="post"class="w-75 m-5 p-3 shado  mx-auto">

    @{
        TempData["Categories"] = JsonSerializer.Serialize(Model.Categories);
    }
  <div class="form-group">
    <label class="form-labe1">Ürün Adı</label>
    <input type="text" class="form-control"name="Name" placeholder="Ürün Adınızı Giriniz">
  </div>
  <div class="form-group">
    <label class="form-labe1">Ürün Fiyat</label>
    <input type="text" class="form-control"name="Price" placeholder="Ürün Fiyatını Giriniz">
  </div>
  <div class="form-group">
    <label class="form-labe1">Ürün Stok</label>
    <input type="text" class="form-control"name="Stock" placeholder="Ürün Stok Giriniz">
  </div>
  <div class="form-group">
    <label class="form-labe1">Kategori Adı</label>
   <select class="form-select" asp-items="@Model.Categories" asp-for="CategoryId"></select>
  </div>
  <div class="mt-3">
       <button type="submit" class="btn btn-primary">Kaydet</button>
  </div>
</form>

