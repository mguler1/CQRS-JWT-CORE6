@using FrontEnd.Models;
@model List<ProductListModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
        <div class="text-end">
        <a asp-action="Create" asp-controller="Product"  class="btn btn-primary btn-sm">Ekle</a>
        </div>
@{
    if(Model?.Count>0)
    {
       
        <table class="table">
    <thead>
        <tr>
           
            <td>Name</td>
            <td>Stock</td>
            <td>Price</td>
            <td>İşlemler</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
        {
           <tr>
          <td>@product.Name</td>
          <td>@product.Stock</td>
          <td>@product.Price</td>
          <td> <a asp-action="Remove" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Sil</a></td>
           </tr>
         }
    </tbody>
</table>
    }
    else
    {
        <div class="text-center">Herhangi bir kayıt bulunamadı</div>
    }
}


