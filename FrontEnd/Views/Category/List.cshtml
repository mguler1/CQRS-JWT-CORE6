@using FrontEnd.Models;
@model List<CategoryListModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
     <div class="text-end">
        <a asp-action="Create" asp-controller="Category"  class="btn btn-primary btn-sm">Ekle</a>
        </div>
    if(Model?.Count>0)
    {
        <table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Definition</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
        {
           <tr>
          <td>@category.Id</td>
          <td>@category.Definition</td>
           <td> <a asp-action="Update" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Güncelle</a></td>
          <td> <a asp-action="Remove" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Sil</a></td>
           </tr>
         }
    </tbody>
</table>
    }
    else
    {
        <div class="text-center">Herhangi bir kayıt bulunamadı</div>
    }
}


